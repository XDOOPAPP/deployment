# .env.production example - cho production deployment

NODE_ENV=production

# API Gateway
GATEWAY_PORT=3000

# Services TCP Ports (thường không đổi)
AUTH_SERVICE_PORT=3001
EXPENSE_SERVICE_PORT=3002
BUDGET_SERVICE_PORT=3003
BLOG_SERVICE_PORT=3004
SUBSCRIPTION_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
OCR_SERVICE_PORT=3007
AI_SERVICE_PORT=3008

# Service Hosts (trong docker-compose)
AUTH_SERVICE_HOST=auth-service
EXPENSE_SERVICE_HOST=expense-service
BUDGET_SERVICE_HOST=budget-service
BLOG_SERVICE_HOST=blog-service
SUBSCRIPTION_SERVICE_HOST=subscription-service
NOTIFICATION_SERVICE_HOST=notification-service
OCR_SERVICE_HOST=ocr-service
AI_SERVICE_HOST=ai-service

# JWT Configuration (THAY ĐỔI GIÁ TRỊ THỰC)
JWT_SECRET=your-production-secret-key-min-32-chars
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Database (thêm khi cần)
# DATABASE_URL=postgres://user:password@postgres:5432/fepa_prod

# Redis (thêm khi cần)
# REDIS_URL=redis://redis:6379
